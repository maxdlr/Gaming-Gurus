<p id="resultInfo" class="text-info text-font text-center mt-3">{{ searchResults|length }}
	resultats.
</p>
{% for searchResult in searchResults %}
	<li class='rounded-4 my-2 py-3 bg-primary border border-3 border-primary list-group-item'>
		<a class='link-underline link-underline-opacity-0' href="{{ path('video_show', { id: searchResult.id }) }}">
			<div class='row'>
				<img class="col-6 img-fluid rounded-4" src="{{ asset('build/images/' ~ searchResult.posterUrl) }}">
				<div class='col-6 d-flex flex-column align-items-start justify-content-center'>
					<h5 class='resultVideos-title title-font text-secondary text-decoration-none'>
						{{searchResult.title}}
					</h5>
					<div class='resultVideos-tag tag-item bg-secondary rounded-3 p-2 d-flex justify-content-center align-items-center m-1'>
						<h2 class='m-0 tag-list text-primary'>
							#
							{{searchResult.tag}}
						</h2>
					</div>
				</div>
			</div>
		</a>
	</li>
{% endfor %}
